@model IEnumerable<Services_task.Models.EmployeeTable>

<h2 class="text-primary text-center">Employee Details</h2>
<br />
<br />
<p class="btn btn-link ">
    <i class="fas fa-plus"></i>&nbsp;
    @Html.ActionLink("Create New", "Upsert", new { @class = "text-white" })
</p>
<br />
<br />
<table class="table table-striped table-bordered ">
    <tr>
        <th class="thead-dark ">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("Delete", "Employee", new { id = item.Id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Upsert", new { id = item.Id, })|                
                    <input type="submit" value="Delete" onclick="return confirm('Want to delete Data?')" class="btn btn-link" />
                </td>
            </tr>
        }
    }

</table>
